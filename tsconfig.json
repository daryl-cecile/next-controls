{
	"compilerOptions": {
		"target": "ES2015",
		"module": "ES2020",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist/esm",
		"declaration": true,
		"declarationDir": "./dist",
		"moduleResolution": "node",
		"isolatedModules": true,
		"pretty": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"src/index.ts",
		"src/types/*.d.ts",
	]
}